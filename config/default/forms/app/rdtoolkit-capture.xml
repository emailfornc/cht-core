<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Rapid Diagnostic Toolkit Demo</h:title>
    <model>
      <itext>
        <translation lang="en">
          <text id="/rdtoolkit-capture/data/__patient_id:label">
            <value>Patient ID</value>
          </text>
          <text id="/rdtoolkit-capture/data/__patient_name:label">
            <value>Patient name</value>
          </text>
          <text id="/rdtoolkit-capture/data/__rdtoolkit_session_id:label">
            <value>Session ID</value>
          </text>
          <text id="/rdtoolkit-capture/data/rdtoolkit_image:label">
            <value>Image</value>
          </text>
          <text id="/rdtoolkit-capture/data/rdtoolkit_results_description:label">
            <value>Results</value>
          </text>
          <text id="/rdtoolkit-capture/data/rdtoolkit_state:label">
            <value>Status</value>
          </text>
          <text id="/rdtoolkit-capture/data/rdtoolkit_time_read:label">
            <value>Taken on</value>
          </text>
          <text id="/rdtoolkit-capture/data/rdtoolkit_time_resolved:label">
            <value>Results were available on</value>
          </text>
          <text id="/rdtoolkit-capture/data/rdtoolkit_time_started:label">
            <value>Started on</value>
          </text>
          <text id="/rdtoolkit-capture/inputs/contact/_id:label">
            <value>What is the patient's name?</value>
          </text>
        </translation>
      </itext>
      <instance>
        <rdtoolkit-capture id="rdtoolkit-capture" prefix="J1!rdtoolkit-capture!" delimiter="#" version="2021-07-05 03:47:57">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source tag="hidden">user</source>
            <contact tag="hidden">
              <_id/>
              <name/>
              <patient_id/>
            </contact>
          </inputs>
          <data>
            <__patient_name/>
            <__patient_id/>
            <__rdtoolkit_session_id tag="hidden"/>
            <rdtoolkit_state/>
            <rdtoolkit_time_started/>
            <rdtoolkit_time_resolved tag="hidden"/>
            <rdtoolkit_results tag="hidden"/>
            <rdtoolkit_results_description/>
            <rdtoolkit_time_read/>
            <rdtoolkit_image type="binary"/>
          </data>
          <patient_uuid tag="hidden"/>
          <patient_id tag="hidden"/>
          <patient_name tag="hidden"/>
          <rdtoolkit_session_id tag="hidden"/>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </rdtoolkit-capture>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/rdtoolkit-capture/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/rdtoolkit-capture/inputs/source" type="string"/>
      <bind nodeset="/rdtoolkit-capture/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/rdtoolkit-capture/inputs/contact/name" type="string"/>
      <bind nodeset="/rdtoolkit-capture/inputs/contact/patient_id" type="string"/>
      <bind nodeset="/rdtoolkit-capture/data/__patient_name" type="string" readonly="true()" calculate="../../inputs/contact/name"/>
      <bind nodeset="/rdtoolkit-capture/data/__patient_id" type="string" readonly="true()" required="true()" calculate="../../inputs/contact/patient_id"/>
      <bind nodeset="/rdtoolkit-capture/data/__rdtoolkit_session_id" type="string" calculate=" /rdtoolkit-capture/rdtoolkit_session_id "/>
      <bind nodeset="/rdtoolkit-capture/data/rdtoolkit_state" type="string"/>
      <bind nodeset="/rdtoolkit-capture/data/rdtoolkit_time_started" type="string"/>
      <bind nodeset="/rdtoolkit-capture/data/rdtoolkit_time_resolved" type="string"/>
      <bind nodeset="/rdtoolkit-capture/data/rdtoolkit_results" type="string"/>
      <bind nodeset="/rdtoolkit-capture/data/rdtoolkit_results_description" type="string"/>
      <bind nodeset="/rdtoolkit-capture/data/rdtoolkit_time_read" type="string"/>
      <bind nodeset="/rdtoolkit-capture/data/rdtoolkit_image" type="string"/>
      <bind nodeset="/rdtoolkit-capture/patient_uuid" type="string" calculate="../inputs/contact/_id"/>
      <bind nodeset="/rdtoolkit-capture/patient_id" type="string" calculate="../inputs/contact/patient_id"/>
      <bind nodeset="/rdtoolkit-capture/patient_name" type="string" calculate="../inputs/contact/name"/>
      <bind nodeset="/rdtoolkit-capture/rdtoolkit_session_id" type="string"/>
      <bind nodeset="/rdtoolkit-capture/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group ref="/rdtoolkit-capture/inputs">
      <group ref="/rdtoolkit-capture/inputs/contact">
        <input appearance="db-object" ref="/rdtoolkit-capture/inputs/contact/_id">
          <label ref="jr:itext('/rdtoolkit-capture/inputs/contact/_id:label')"/>
        </input>
      </group>
    </group>
    <group appearance="rdtoolkit-capture field-list" ref="/rdtoolkit-capture/data">
      <input appearance="rdtoolkit-patient-name" ref="/rdtoolkit-capture/data/__patient_name">
        <label ref="jr:itext('/rdtoolkit-capture/data/__patient_name:label')"/>
      </input>
      <input appearance="rdtoolkit-patient-id" ref="/rdtoolkit-capture/data/__patient_id">
        <label ref="jr:itext('/rdtoolkit-capture/data/__patient_id:label')"/>
      </input>
      <input appearance="rdtoolkit-session-id hidden" ref="/rdtoolkit-capture/data/__rdtoolkit_session_id">
        <label ref="jr:itext('/rdtoolkit-capture/data/__rdtoolkit_session_id:label')"/>
      </input>
      <input appearance="rdtoolkit-state hidden" ref="/rdtoolkit-capture/data/rdtoolkit_state">
        <label ref="jr:itext('/rdtoolkit-capture/data/rdtoolkit_state:label')"/>
      </input>
      <input appearance="rdtoolkit-time-started hidden" ref="/rdtoolkit-capture/data/rdtoolkit_time_started">
        <label ref="jr:itext('/rdtoolkit-capture/data/rdtoolkit_time_started:label')"/>
      </input>
      <input appearance="rdtoolkit-time-resolved hidden" ref="/rdtoolkit-capture/data/rdtoolkit_time_resolved">
        <label ref="jr:itext('/rdtoolkit-capture/data/rdtoolkit_time_resolved:label')"/>
      </input>
      <input appearance="rdtoolkit-results hidden" ref="/rdtoolkit-capture/data/rdtoolkit_results"/>
      <input appearance="rdtoolkit-results-description hidden" ref="/rdtoolkit-capture/data/rdtoolkit_results_description">
        <label ref="jr:itext('/rdtoolkit-capture/data/rdtoolkit_results_description:label')"/>
      </input>
      <input appearance="rdtoolkit-time-read hidden" ref="/rdtoolkit-capture/data/rdtoolkit_time_read">
        <label ref="jr:itext('/rdtoolkit-capture/data/rdtoolkit_time_read:label')"/>
      </input>
      <input appearance="rdtoolkit-image hidden" ref="/rdtoolkit-capture/data/rdtoolkit_image">
        <label ref="jr:itext('/rdtoolkit-capture/data/rdtoolkit_image:label')"/>
      </input>
    </group>
  </h:body>
</h:html>
